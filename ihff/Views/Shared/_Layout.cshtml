@using System.Globalization
@using System.Threading
@using Resources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - IHFF</title>
    <link href='https://fonts.googleapis.com/css?family=Ubuntu:400,300,500' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="navbar-li">@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="navbar-li">@Html.ActionLink(@Resource.MovieLink, "Movies", "Home")</li>
                <li class="navbar-li">@Html.ActionLink(@Resource.FoodLink, "Food", "Home")</li>
                <li class="navbar-li">@Html.ActionLink(@Resource.ActivitiesLink, "Activities", "Home")</li>
                <li class="navbar-li">@Html.ActionLink("Food & Film Ticket", "FoodFilm", "Home")</li>
                <li class="navbar-li">@Html.ActionLink(@Resource.HaarlemLink, "Haarlem", "Home")</li>
                <li class="navbar-li">@Html.ActionLink("Contact", "Contact", "Home")</li>
                <li class="navbar-li">
                    @{
                        CultureInfo currentCulture = Thread.CurrentThread.CurrentCulture;
                        if (currentCulture.Name == "en-US")
                        {
                            @Html.ActionLink(@Resource.LanguageLbl, "ChangeCurrentCulture", "Home", new {id = 1}, null)
                        }
                        else
                        {
                            @Html.ActionLink(@Resource.LanguageLbl, "ChangeCurrentCulture", "Home", new {id = 0}, null)
                        }
                    }
                </li>
            </ul>
        </div>
    </div>
</div>

    <div id="div-center">
        <div id="welcome-intro">
            <h1>Welcome to</h1>
            <h3>the website of IHFF</h3>
        </div>

        <div id="left-div-container">
            @RenderBody()
        </div>

        <div id="right-div-container">            
            @Html.Action("Index", "Wishlist")
        </div>
        <div id="footer-div-container">
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="@Url.Content("~/Scripts/navbar-highlight.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
